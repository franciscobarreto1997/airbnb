<%= simple_form_for(@flat) do |f| %>
  <%= f.label "Home Type"  %>
  <%= f.collection_radio_buttons :home_type_id, HomeType.all, :id, :name %>
  <%= f.label "Room Type" %>
  <%= f.collection_radio_buttons :room_type_id, RoomType.all, :id, :name  %>
  <%= f.label "Acommodates" %>
  <%= f.select :acommodates, (1..15) %>
  <%= f.label "Address" %>
  <%= f.input :address, label: false, required: true %>
  <%= f.label "Title" %>
  <%= f.input :title, label: false, required: true %>
  <%= f.label "Description" %>
  <%= f.input :description, label: false, required: true %>
  <%= f.label "Price (per night)" %>
  <%= f.input :price, label: false, required: true %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit  %>
<% end %>

