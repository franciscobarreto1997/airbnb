<div class="navbar-wagon-2">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand-2" do %>
    <%= image_tag "airbnblogocolor2.png", height: 40 %>
  <% end %>

  <%= form_tag flats_path, method: :get, :class => 'form' do |f| %>
    <%= text_field_tag :near, nil, placeholder: "Search" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right-2 hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Add Flat", new_flat_path, class: "navbar-wagon-item-2 navbar-wagon-link-2" %>
      <%= link_to "Trips", "#", class: "navbar-wagon-item-2 navbar-wagon-link-2" %>
      <%= link_to "Messages", "#", class: "navbar-wagon-item-2 navbar-wagon-link-2" %>
          <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "navbar-wagon-item-2 navbar-wagon-link-2" %>
    <% else %>
      <!-- Login link (when logged out) -->
      <button type="button" class="navbar-wagon-item-2 navbar-wagon-link-2 login-btn" data-toggle="modal" data-target="#exampleModalCenter">
        Login
      </button>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item-2 hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>
