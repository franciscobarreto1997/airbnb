<%= simple_form_for @flat, html: {id: "update_form"} do |f| %>
  <%= f.label "Home Type" %>
  <%= f.collection_radio_buttons :home_type_id, HomeType.all, :id, :name %>
  <%= f.label "Room Type" %>
  <%= f.collection_radio_buttons :room_type_id, RoomType.all, :id, :name %>
  <%= f.label "Acommodates" %>
  <%= f.select :acommodates, (1..15) %>
  <%= f.label "Title" %>
  <%= f.text_field :title ,placeholder: "Give your place a stylish title", required: true %>
  <%= f.label "Description" %>
  <%= f.text_field :description, placeholder: "Describe your place", required: true %>
  <%= f.label "Price (per night)" %>
  <%= f.text_field :price, placeholder: "Enter the price of your place", required: true %>
  <%= f.label "Street" %>
  <%= f.input :street, label: false, required: true %>
  <%= f.label "City" %>
  <%= f.input :city, label: false, required: true %>
  <%= f.label "Zip" %>
  <%= f.input :zip, label: false, required: true %>
  <%= f.label "State" %>
  <%= f.input :state, label: false, required: true %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.button :submit, class:"submit" %>
<% end %>
